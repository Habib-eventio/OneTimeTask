<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h3 class="text-danger text-center mt-4">❌ Access Denied</h3>
                    <p class="text-center"><a href="/Account/Login">Return to Login</a></p>
                </NotAuthorized>
                <Authorizing>
                    <p class="text-center mt-5">Loading session...</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p class="text-center mt-5">Sorry, the page was not found.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
