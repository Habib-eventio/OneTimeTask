                                            </div>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container">
                                                <SfGrid @ref="ShopOutPutGrid" DataSource="@ModalSHOPOutPutMetricsHistories" AllowTextWrap="true" AllowSorting="true"
                                                        Height="400" RowHeight="10">
                                                    <GridSelectionSettings Mode="Syncfusion.Blazor.Grids.SelectionMode.Row">
                                                    </GridSelectionSettings>
                                                    <GridEditSettings AllowAdding="false"
                                                                      AllowEditing="false"
                                                                      AllowEditOnDblClick="false"
                                                                      AllowDeleting="false"></GridEditSettings>
                                                    <GridColumns>
                                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                                    Field=@nameof(MetricsHistoryCustomData.ActualDate)
                                                                    HeaderText="DATE" Format="MM/dd/yyyy"></GridColumn>

                                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                                    Field=@nameof(MetricsHistoryCustomData.ShopOutputTotal)
                                                                    EnableGroupByFormat="true" Format="C0"
                                                                    HeaderText="SHOP OUTPUT TOTAL"></GridColumn>

                                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                                    Field=@nameof(MetricsHistoryCustomData.ShopOutputExpenses)
                                                                    EnableGroupByFormat="true" Format="C0"
                                                                    HeaderText="SHOP OUTPUT EXPENSES">
                                                        </GridColumn>
                                                    </GridColumns>
                                                </SfGrid>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
                <div class="col-md-6 m-0 p-1 standardBorder border-left row">
                    <div class="col-12 m-0 p-0 standardHeaderStyle row">
                        <div class="col-md-8 m-0 p-0 text-left">
                            <label class="m-0 p-0 mt-1 ml-1">
                                INVENTORY AND PKGINVENTORY TOTAL
                            </label>
                        </div>

                        @if (!IsLoadingMetricsHistory)
                        {
                            <div class="col-md-4 p-1" style="text-align:right">
