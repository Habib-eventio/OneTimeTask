                                    <ChartAxisLabelStyle Size="15px" FontWeight="Bold" />
                                    <ChartAxisLabelStyle Size="15px" FontWeight="Bold" />
                                </ChartAxis>
                                <ChartAxis LabelIntersectAction="LabelIntersectAction.MultipleRows" LabelFormat="C0" RowIndex="1" Name="YleftAxis">
                                    <ChartAxisLabelStyle Size="15px" FontWeight="Bold" />
                                </ChartAxis>
                            </ChartAxes>
                            <ChartTooltipSettings Enable="true"></ChartTooltipSettings>
                            <ChartSeriesCollection>
                                <ChartSeries LegendShape="LegendShape.Rectangle" Name="INVENTORY TOTAL"
