                        <SfChart Background="White" UseGroupingSeparator="true" Height="500">
                            <ChartZoomSettings EnableSelectionZooming="true" Mode="ZoomMode.XY"></ChartZoomSettings>
                            <ChartPrimaryXAxis Interval="1" Span="2" LabelIntersectAction="LabelIntersectAction.Rotate45"
