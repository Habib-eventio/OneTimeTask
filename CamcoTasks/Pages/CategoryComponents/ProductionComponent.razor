@* @inherits ProductionComponentModel
@using CamcoTasks.Data.Services
@using CamcoTasks.ViewModels.PlanningOverheadDTO;


<div class="col-12 navbar navbar-expand screenLabel position-fixed top-row m-0 p-0 screenLabelStyle" >
    <div class="col-12 m-0 p-0" style="font-size: 18px; text-align: left;"><span style="float: left">Ma / Me / Pr</span></div>
</div>

<div class="m-4 pl-2">
    <div class="row standardBorder">
        <div class="col-md-12 m-0 p-1">
            <div class="text-center standardHeaderStyle">
                <label class="m-0 p-0 mt-1">SHOP OUTPUT</label>
            </div>

            @if (IsLoadingShopOutPut)
            {
                <br />
                <div class="col-md-12" style="display:flex; justify-content:center; align-items:center;">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">LOADING...</span>
                    </div>
                </div>
            }
            else
            {
                <div>
                    <SfGrid DataSource="@shopDailyOutputs" AllowTextWrap="true" AllowSorting="true" Height="300" EnableVirtualization="true" RowHeight="10">
                        <GridSortSettings>
                            <GridSortColumns>
                                <GridSortColumn Field="Date" Direction="SortDirection.Descending"></GridSortColumn>
                            </GridSortColumns>
                        </GridSortSettings>
                        <GridColumns>
                            <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                        Field=@nameof(TempShopDailyOutput.Date) Width="100" MaxWidth="100"
                                        HeaderText="DATE" Format="MM/dd/yyyy"></GridColumn>
                            <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center" Width="100" MaxWidth="100"
                                        Field=@nameof(TempShopDailyOutput.Total) HeaderText="DAILY OUTPUT" Format="C0"></GridColumn>
                            <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center" Width="100" MaxWidth="100"
                                        Field=@nameof(TempShopDailyOutput.Expenses) HeaderText="DAILY EXPENSES" Format="C0"></GridColumn>
                            <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center" Width="100" MaxWidth="100"
                                        Field=@nameof(TempShopDailyOutput.PL) HeaderText="PROFIT/LOSS" Format="C0"></GridColumn>
                        </GridColumns>
                    </SfGrid>

                </div>

            }
        </div>
    </div>
    <div class="pt-2">
        <div class="row standardBorder">
            <div class="col-md-12 m-0 p-1">
                <div class="row col-12 m-0 p-0 standardHeaderStyle">
                    <div class="col-md-3"> </div>
                    <div class="col-md-6 m-0 p-0 text-center">
                        <label class="mt-1 m-0 p-0">
                            OVERHEAD
                        </label>
                    </div>

                    @if (!IsLoadingOH)
                    {
                        <div class="col-md-3 p-1" style="text-align:right">
                            <a href="javascript:void(0);" class="btn viewSkinButtonStyle"
                               role="button" data-placement="top" title="" data-original-title="Edit"
                               data-toggle="modal" data-target="#OverHeadModal"
                            @onclick="@RefreshDataModalOverHead">VIEW/EDIT OVERHEAD DATA</a>
                        </div>
                    }
                </div>

                @if (IsLoadingOH)
                {
                    <br />
                    <div class="col-md-12" style="display:flex; justify-content:center; align-items:center;">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">LOADING...</span>
                        </div>
                    </div>
                }
                else
                {

                    <SfChart UseGroupingSeparator="true">
                        <ChartZoomSettings EnableSelectionZooming="true" Mode="ZoomMode.XY"></ChartZoomSettings>
                        <ChartPrimaryXAxis Interval="1" LabelIntersectAction="LabelIntersectAction.Rotate45" RangePadding="ChartRangePadding.None"
                                           IntervalType="IntervalType.Auto" ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
                            <ChartAxisLabelStyle Size="15px" FontWeight="Bold" />
                        </ChartPrimaryXAxis>

                        <ChartAxes>
                            <ChartAxis LabelIntersectAction="LabelIntersectAction.MultipleRows"
                                       OpposedPosition="true" RowIndex="1" Name="YRightAxis">
                                <ChartAxisLabelStyle Size="15px" Color="black" FontWeight="Bold" />
                            </ChartAxis>
                            <ChartAxis LabelFormat="C0" LabelIntersectAction="LabelIntersectAction.MultipleRows"
                                       RowIndex="1" Name="YleftAxis">
                                <ChartAxisLabelStyle Size="15px" Color="black" FontWeight="Bold" />
                            </ChartAxis>
                        </ChartAxes>

                        <ChartTooltipSettings Enable="true"></ChartTooltipSettings>

                        <ChartSeriesCollection>
                            <ChartSeries LegendShape="LegendShape.Rectangle" Name="OVERHEAD PER HOUR" DataSource="@CustomOverheadData"
                                         YAxisName="YleftAxis" XName="DateReported" YName="OverheadPerHour" Width="2"
                                         Type="ChartSeriesType.Line">
                                <ChartTitleStyle Size="18px" FontWeight="Bold" />
                            </ChartSeries>
                            <ChartSeries LegendShape="LegendShape.Rectangle" Name="TOTAL DIRECT HOURS" DataSource="@CustomOverheadData"
                                         XName="DateReported" YAxisName="YRightAxis" YName="TotalDirectHours" Width="2"
                                         Type="ChartSeriesType.Line">
                                <ChartTitleStyle Size="18px" FontWeight="Bold" />
                            </ChartSeries>
                        </ChartSeriesCollection>
                        <ChartLegendSettings ShapeWidth="20" Visible="true" Alignment="Alignment.Center" Padding="15">
                            <ChartLegendTextStyle Size="18px" FontWeight="Bold" />
                        </ChartLegendSettings>
                    </SfChart>

                }
            </div>

            <div class="modal fade" id="OverHeadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center align-content-center row m-0 p-1">
                            <div class="col-2  m-0 p-0">
                            </div>
                            <div class="text-center col-8 m-0 p-0 align-content-center">
                                <p class="standardHeaderFontSize  m-0 p-0" id="exampleModalLabel">OVERHEAD DATA</p>
                            </div>
                            <div class="text-right col-2 m-0 p-0">
                                <img data-dismiss="modal" src="/Icons/Finalized/Close Button/Non-Power User/Png Files/CloS6 80x250.png" style="width:120px;height:40px;cursor:pointer" />
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                <SfGrid @ref="OverHeadGridRef" DataSource="@OverheadData" AllowTextWrap="true" AllowSorting="true"
                                        Height="400" RowHeight="10" Toolbar="@gridToolBar">
                                    <GridSelectionSettings Mode="Syncfusion.Blazor.Grids.SelectionMode.Row"></GridSelectionSettings>
                                    <GridEvents OnActionBegin="ActionBeginOverHead" TValue="PlanningOverheadViewModel"></GridEvents>
                                    <GridEditSettings AllowAdding="true"
                                                      AllowEditing="true"
                                                      AllowEditOnDblClick="true"
                                                      AllowDeleting="true"></GridEditSettings>
                                    <GridSortSettings>
                                    </GridSortSettings>
                                    <GridColumns>
                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                    Field=@nameof(PlanningOverheadViewModel.OverheadId) Visible="false" HeaderText="ID"
                                                    IsPrimaryKey="true"></GridColumn>
                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                    Field=@nameof(PlanningOverheadViewModel.OverheadDate) HeaderText="DATE" Format="MM/dd/yyyy"></GridColumn>
                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                    Field=@nameof(PlanningOverheadViewModel.OverheadPerHour) HeaderText="OVERHEAD $/HR"
                                                    EnableGroupByFormat="true" Format="C0"></GridColumn>
                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                                    Field=@nameof(PlanningOverheadViewModel.TotalDirectHours) HeaderText="TOTAL DIRECT HRS"></GridColumn>
                                    </GridColumns>
                                </SfGrid>>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

    <div class="pt-2">
