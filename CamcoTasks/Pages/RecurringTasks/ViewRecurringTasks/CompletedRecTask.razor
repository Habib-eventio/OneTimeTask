@page "/viewrecurringtasks/completeTask/{TaskId:int}/{CompleteValue:int}"

<div class="row">
    <div class="col-md-12 m-auto text-center mt-5 pt-5">
        @if (IsLoading)
        {
            <div class="text-center m-2">
                <div class="spinner-border text-success" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <h3>@Message</h3>
        }
    </div>
</div>
