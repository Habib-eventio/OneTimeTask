@using CamcoTasks.Library
@using CamcoTasks.Service.Service
@using Syncfusion.Blazor.Charts
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Inputs;
@using Syncfusion.Blazor.Popups;
@using Syncfusion.Blazor.Calendars;


<!--rec task postpone modal-->
<div class="modal fade" id="RecTaskPostponeModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"
     style="background-color: rgba(0, 0, 0, 0.80);">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div style="display:block" class="modal-header">
                <div class="row">
                    <div class="col-md-3">
                        <h5 class="modal-title" id="exampleModalLabel">@(isActivePostponedTask ? "POSTPONE TASK" : "UNABLE TO COMPLETE TASK")</h5>
                    </div>
                    <div class="col-md-9">
                        <div class="text-right text-light">
                            <button class="btn btn-danger" data-dismiss="modal" @onclick="CloseComponent">CANCEL</button>
                            @if (IsDoing)
                            {
                                <div class="spinner-border text-success ml-3" role="status">
                                    <span class="sr-only"></span>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-primary m-1" @onclick="(async () => await Save())">
                                    SAVE
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="margin-bottom:0px; font-weight:bold">@(isActivePostponedTask ? "POSTPONED BY:" : "UNABLE TO COMPLETE BY:") </label>
                                <SfComboBox ID="Audit" TItem="string" TValue="string"
                                            DataSource="@Auditemployee" Autofill="true" AllowFiltering="true"
                                            CssClass="BackgroundCustom" @bind-Value="UpdatesTask.UpdateBy"
                                            FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
                                    <ComboBoxEvents TItem="string" TValue="string"></ComboBoxEvents>
                                </SfComboBox>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>REASON</label>
                                <SfTextBox ID="reasonId" CssClass="BackgroundCustom" HtmlAttributes="@htmlAttribute" Multiline="true" Placeholder="Enter Task Reason" @bind-Value="PostponeReason">
                                </SfTextBox>
                            </div>
                        </div>
                    </div>
                    @if (!isActivePostponedTask)
                    {
                        <div class="row">
                            <div class="col-md-12 m-2">
                                <div class="form-group">
                                    <label># OF DAYS TO DELAY TASK</label>
                                    <input class="col-md-2 form-control bg-warning d-inline BackgroundCustom" type="number" @bind-value="PostponeDays">
                                </div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Error))
                    {
                        <div class="row">
                            <div class="col-md-12 text-danger m-2 text-center">
                                <h4>* @Error</h4>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>