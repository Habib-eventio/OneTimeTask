@page "/viewrecurringtasks/{Month:int}"
@using CamcoTasks.ViewModels.TasksRecTasksDTO;


@if (_isRecLateReportLoad)
{
    <div class="text-center m-2">
        <div class="spinner-border text-success" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    <h3 class="m-2 text-center">PAST 2 MONTHS LATE TASKS REPORT</h3>

    <div class="col-12 mb-5 p-0 pb-5">
        <SfGrid DataSource="@Tasks" ID="Reccontainer"AllowSelection="true" AllowSorting="true"Width="100%" AllowTextWrap="true" EnableHover="false" RowHeight="38">

            <GridColumns>
                <GridColumn TextAlign="TextAlign.Center" Width="55" AllowFiltering="true" Field=@nameof(TasksRecTasksViewModel.Id) HeaderText="ID" FilterSettings="@(new FilterSettings { Type = Syncfusion.Blazor.Grids.FilterType.Menu })"></GridColumn>

                <GridColumn TextAlign="TextAlign.Left" Width="120" HeaderTextAlign="TextAlign.Left" Field=@nameof(TasksRecTasksViewModel.TaskDescriptionSubject) HeaderText="TASK SUBJECT" AllowFiltering="true" FilterSettings="@(new FilterSettings { Type = Syncfusion.Blazor.Grids.FilterType.Menu })"></GridColumn>

                <GridColumn TextAlign="TextAlign.Left" Width="500" HeaderTextAlign="TextAlign.Left" Field=@nameof(TasksRecTasksViewModel.Description) HeaderText="DESCRIPTION">
                </GridColumn>

                <GridColumn TextAlign="TextAlign.Center" Width="85" Field=@nameof(TasksRecTasksViewModel.UpcomingDate) HeaderText="DUE DATE" Format="MM/dd/yyyy" >
                </GridColumn>
            </GridColumns>
        </SfGrid>
    </div>

}