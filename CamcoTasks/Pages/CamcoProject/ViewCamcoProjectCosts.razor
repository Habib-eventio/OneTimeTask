@page "/camcoProject/viewCamcoProjectCost/{ProCodeId:int}"
@using CamcoTasks.Data.ModelsViewModel;
@using CamcoTasks.Infrastructure.Entities


<style>
    .e-grid .e-icon-filter::before, .e-grid-menu .e-icon-filter::before {
        content: "";
        background-image: url('Icons/filter-white.svg');
        background-size: contain;
        background-repeat: no-repeat;
        display: inline-block;
        height: 16px;
        width: 16px;
    }

    .e-grid .e-filtered::before {
        content: "";
        background-image: url('Icons/filter-gray.svg');
        background-size: contain;
        background-repeat: no-repeat;
        display: inline-block;
        height: 16px;
        width: 16px;
    }
</style>

<div class="col-12 navbar navbar-expand screenLabel position-fixed top-row m-0 p-0" style="background-color: #666666; color: white; height: 20px; margin-top: 70px !important;">
    <div class="col-12 m-0 p-0" style="font-size: 18px; text-align: left;"><span style="float: left">Ma / Me / PoCo</span></div>
</div>

<div>
    @if (_isRender)
    {
        <div class="text-center m-5">
            <div class="spinner-border text-success" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <h2 class="text-center pt-2">VIEW PROJECT COSTING</h2>
        <h4 class="text-center pt-2" style="color:red">PROJECT TITLE: @CamcoProject.Title</h4>

        <div class="ml-4 pb-5">
            <SfGrid @ref="@_proGrid" DataSource="@_productCosting" AllowTextWrap="false" AllowSelection="false"
                    RowHeight="18" Height="600" AllowGrouping="false" AllowFiltering="true" EnableHover="false">
                <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel"></GridFilterSettings>
                <GridColumns>
                    <GridColumn Field=@nameof(ProjectCosting.SoNumber) HeaderText="PROJECT CODE" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left"></GridColumn>
                    <GridColumn Field=@nameof(ProjectCosting.ProjectTitle) HeaderText="JOB TITLE" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left"></GridColumn>
                    <GridColumn Field=@nameof(ProjectCosting.Champion) HeaderText="EMPLOYEE" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left"></GridColumn>
                    <GridColumn Field=@nameof(ProjectCosting.LastActivityDate) Format="MM/dd/yyyy" HeaderText="ACTIVITY DATE" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left"></GridColumn>
                    <GridColumn Field=@nameof(ProjectCosting.HoursSpent) HeaderText="HOURS SPENT" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    }
</div>