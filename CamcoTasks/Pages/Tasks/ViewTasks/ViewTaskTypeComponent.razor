@using CamcoTasks.ViewModels.TasksTaskUpdatesDTO;



<!--view task type modal-->
<div class="modal fade" id="ViewTypeTask" data-backdrop="static" data-keyboard="false"
     tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document" style="max-width: 100%; width: 90%;">
        <div class="modal-content" style="min-height:600px;">
            @if (IsLoadTask)
            {
                <div class="spinner-border m-auto" role="status">
                    <span class="sr-only"></span>
                </div>
            }
            else
            {
                <div class="modal-header">
                    <h5 style="text-transform:uppercase;" class="modal-title" id="exampleModalLabel">
                        VIEW @SelectedEmployeeTask.TaskType TASKS
                    </h5>
                    <div class="col-md-6">
                        <button @onclick="GetPrevTask" class="btn btn-info btn-sm"><i class="flaticon-cancel-12"></i>PREV</button>
                        <button @onclick="ViewAllTypeTasks" data-dismiss="modal" class="btn btn-success btn-sm"><i class="flaticon-cancel-12"></i>VIEW ALL</button>
                        <button @onclick="GetNextTask" class="btn btn-info btn-sm"><i class="flaticon-cancel-12"></i>NEXT</button>
                    </div>
                    <div class="col-md-2 text-right">
                        <button class="btn btn-danger btn-sm" @onclick="CloseComponent"><i class="flaticon-cancel-12"></i>CANCEL</button>
                    </div>
                </div>
                <div class="modal-body" style="overflow:auto">
                    @if (IsDoingTask)
                    {
                        <div class="row" style="height:400px">
                            <div class="spinner-border m-auto" role="status">
                                <span class="sr-only"></span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12" style="min-height:140px;">
                                <label style="font-weight:bold">TASK DESCRIPTION: </label>
                                <label style="text-transform:uppercase;">@SelectedEmployeeTask.Description</label>
                            </div>
                            <div class="col-md-4">
                                <label style="font-weight:bold">DATE ADDED: </label>
                                <label style="text-transform:uppercase;">@SelectedEmployeeTask.DateAdded?.ToString("MM/dd/yyyy")</label>
                            </div>
                            <div class="col-md-4">
                                <label style="font-weight:bold">INITIATOR: </label>
                                <label style="text-transform:uppercase;">@SelectedEmployeeTask.Initiator</label>
                            </div>
                            <div class="col-md-4">
                                <label style="font-weight:bold">PRIORITY: </label>
                                <label style="text-transform:uppercase;">@SelectedEmployeeTask.Priority</label>
                            </div>
                            <div class="col-md-12">
                                <SfGrid @ref="TypeUpdatesGrid" DataSource="@SelectedEmployeeTask.TasksTaskUpdates"
                                AllowSelection="true" AllowSorting="true" AllowPaging="false" AllowResizing="true"
                                AllowTextWrap="true" EnableHover="true" RowHeight="38" Height="400">
                                    <GridSelectionSettings Mode="Syncfusion.Blazor.Grids.SelectionMode.Row"></GridSelectionSettings>
                                    <GridColumns>
                                        <GridColumn TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"
                                            Format="MM/dd/yyyy" DefaultValue="@DateTime.Today"
                                            Field=@nameof(TasksTaskUpdatesViewModel.UpdateDate)
                                            HeaderText="UPDATE DATE" Width="150"></GridColumn>
                                        <GridColumn TextAlign="TextAlign.Left" HeaderTextAlign="TextAlign.Center"
                                            Field=@nameof(TasksTaskUpdatesViewModel.Update) HeaderText="UPDATE" Width="700"
                                            ClipMode="ClipMode.EllipsisWithTooltip"></GridColumn>
                                    </GridColumns>
                                </SfGrid>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>